# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# OPENROUTER_APP_URL=http://localhost:5173
# OPENROUTER_APP_TITLE=OpenRouter Chat Backend

# Model Configuration
OPENROUTER_DEFAULT_MODEL=openrouter/auto
# OPENROUTER_SYSTEM_PROMPT=You are a helpful assistant...

# LLM Context Planning (Feature Flag)
# When true (default), uses LLM-based context planning for intelligent tool selection
# When false, falls back to legacy keyword-based planning
USE_LLM_PLANNER=true

# Database Configuration
# CHAT_DATABASE_PATH=data/chat_sessions.db
# MODEL_SETTINGS_PATH=data/model_settings.json
# MCP_SERVERS_PATH=data/mcp_servers.json
# PRESETS_PATH=data/presets.json

# File Storage Configuration
# ATTACHMENTS_MAX_SIZE_BYTES=10485760  # 10MB
# ATTACHMENTS_RETENTION_DAYS=7
# LEGACY_ATTACHMENTS_DIR=data/uploads

# Google Cloud Storage
GCS_BUCKET_NAME=your-gcs-bucket-name
GCP_PROJECT_ID=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=credentials/googlecloud/sa.json

# Google OAuth
# GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/google-auth/callback
# FRONTEND_URL=http://localhost:5173

# Deepgram Speech-to-Text (Optional)
# DEEPGRAM_API_KEY=your_deepgram_api_key_here
# DEEPGRAM_TOKEN_TTL=30
# DEEPGRAM_ALLOW_APIKEY_FALLBACK=false

# Request Timeouts
# OPENROUTER_TIMEOUT=120.0

# Logging
# CONVERSATION_LOG_DIR=logs/conversations

# Image Download Configuration
# IMAGE_DOWNLOAD_ALLOWED_HOSTS=
# IMAGE_DOWNLOAD_TIMEOUT_SECONDS=15
# IMAGE_DOWNLOAD_MAX_BYTES=10485760

# Notion Integration (Optional)
# NOTION_TOKEN=notion_secret_xxx
# NOTION_VERSION=2022-06-28
# NOTION_PAGE_ID=
# NOTION_DATABASE_ID=
